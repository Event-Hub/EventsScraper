<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.14.xsd">


    <changeSet id="1" author="VictoR">
        <comment>Create City table</comment>
        <createTable tableName="cities">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="name" type="varchar"/>
        </createTable>

        <comment>Creat Place table</comment>
        <createTable tableName="places">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="name" type="varchar"/>
            <column name="street" type="varchar"/>
            <column name="number" type="integer"/>
        </createTable>

        <comment>Create Type table</comment>
        <createTable tableName="types">
            <column name="type_id" type="bigint" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="type" type="varchar"/>
        </createTable>

        <comment>Create Event table</comment>
        <createTable tableName="events">
            <column name="event_id" type="bigint" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="city_id" type="bigint"/>
            <column name="place_id" type="bigint"/>
            <column name="start_date" type="java.sql.Types.TIMESTAMP_WITH_TIMEZONE"/>
            <column name="end_date" type="java.sql.types.timestamp_with_timezone"/>
            <column name="title" type="varchar"/>
            <column name="description" type="varchar"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="events" baseColumnNames="city_id" constraintName="fk_city" referencedTableName="cities"
                                 referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="events" baseColumnNames="place_id" constraintName="fk_place" referencedTableName="places"
                                 referencedColumnNames="id"/>

        <comment>Create Event_Type table</comment>
        <createTable tableName="event_type">
            <column name="event_id" type="bigint">
                <constraints primaryKey="true" nullable="false"></constraints>
            </column>
            <column name="type_id" type="bigint">
                <constraints primaryKey="true" nullable="false"></constraints>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="event_type" baseColumnNames="event_id" constraintName="fk_event"
                                 referencedTableName="events" referencedColumnNames="event_id"></addForeignKeyConstraint>
        <addForeignKeyConstraint baseTableName="event_type" baseColumnNames="type_id" constraintName="fk_type"
                                 referencedTableName="types"
                                 referencedColumnNames="type_id"></addForeignKeyConstraint>
    </changeSet>

</databaseChangeLog>